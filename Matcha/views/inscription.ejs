<% include header %>
<div class="container text-center">

		<h2>Inscription</h2>
	<form>
  <div id="resultat"></div>
  		<div class="form-group">
    		<label class="control-label col-sm-2" for="email">Email:</label>
          <div class="col-sm-10">
      			<input type="email" class="form-control" id="email" placeholder="Enter email" >
          </div>
    	</div>
      <div class="form-group">
        <label class="control-label col-sm-2" for="email">password:</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" id="pwd" placeholder="Enter password" >
          </div>
      </div>
  		</br>
  		<div class="form-group">
    		<label class="control-label col-sm-2" for="pseudo">Pseudo:</label>
    		<div class="col-sm-10">
      			<input type="text" class="form-control" id="pseudo" placeholder="Enter pseudo" >
    		</div>
  		</div>
  		<br />
  		<div class="form-group">
    		<label class="control-label col-sm-2" for="nom">Nom:</label>
    		<div class="col-sm-10">
      			<input type="text" class="form-control" id="nom" placeholder="Enter nom" >
    		</div>
  		</div>
  		<br />
  		<div class="form-group">
    		<label class="control-label col-sm-2" for="prenom">Pr√©nom:</label>
    		<div class="col-sm-10">
      			<input type="text" class="form-control" id="prenom" placeholder="Enter prenom" >
    		</div>
  		</div>
  		</br>
  		<div class="form-group"> 
    		<div class="col-sm-offset-2 col-sm-10">
      			<button type="submit" id="inscription_form" class="btn btn-danger">Envoyer</button>
            <input type="hidden" name="geo" id="geoResult" value=""></input>
    		</div>
    	</div>
  	</form>
</div>

<script>
   $(function(){

    var $email = $("#email"),
        $pseudo = $("#pseudo"),
        $nom = $("#nom"),
        $prenom = $("#prenom");
        $pwd = $("#pwd");

   /*     
    }*/

        $.getJSON("http://ip-api.com/json/?callback=?", function(data) {
          $("#geoResult").val(JSON.stringify(data));
          console.log('geo dans json: ', data);
     });


    $("#inscription_form").click(function(e){
       e.preventDefault();

       var $email = $("#email").val(),
        $pseudo = $("#pseudo").val(),
        $nom = $("#nom").val(),
        $prenom = $("#prenom").val(),
        $pwd = $("#pwd").val(),
        $geo = $("#geoResult").val();


        if (check($email) &&
            checkSecu($pseudo) &&
            check($nom) &&
            check($prenom) &&
            checkSecu($pwd)){
          $.post(
            'inscription/inscription',
            {
                email : $email,
                pseudo : $pseudo,
                nom: $nom,
                prenom: $prenom,
                pwd: $pwd,
                geo: $geo,
            },
            function(data){
              $("#resultat").html(data);
            },
            'text'
         );
        }
    });
    function checkSecu(champ){
      if (!champ.match(/[A-Z]/)){
        $("#resultat").html('Il faut une majuscule sur le pseudo et sur le motdepasse');
        return false;
      }else return true;
    }

    function check(champs){
        if(champs == ""){ 
          $("#resultat").html('un des champ est un complet');
          return false;
        } else return true;
    }

});
</script>

</body>
</html>